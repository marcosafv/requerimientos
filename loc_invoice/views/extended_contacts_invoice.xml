<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
 <!-- vista extendida de account.invoice para facturas -->
        <record id="view_account_form" model="ir.ui.view">
            <field name="inherit_id" ref="account.invoice_form" />
            <field name="model">account.invoice</field>
            <field name="arch" type="xml">
                <xpath expr="(//field[@name='payment_term_id'])" position="after">
                    <field name="first_name"/>
                    <field name="first_last_name"/>
                    <field name="nit"/>
                    <field name="with_holding_selec" string="Retencion"/>
            		<field name="concept" attrs="{'invisible':[('with_holding_selec', '!=', True)]}"/>
       				<field name="base_uvt" attrs="{'invisible':[('with_holding_selec', '!=', True)]}"/>
	       			<field name="base_pesos" string="Base Pesos" attrs="{'invisible':[('with_holding_selec', '!=', True)]}"/>
	    			<field name="rates" attrs="{'invisible':[('with_holding_selec', '!=', True)]}"/>
       				<field name="type_rates" attrs="{'invisible':[('with_holding_selec', '!=', True)]}"/>
                </xpath>
                
                <xpath expr="(//field[@name='partner_id'])" position="attributes"> 
                    <attribute name="on_change">on_change_partner_id(partner_id)</attribute>
                </xpath>
                
            </field>
        </record>
  
    </data>
</openerp>        