<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
 <!-- vista extendida de account.invoice para facturas -->
        <record id="view_account_form" model="ir.ui.view">
            <field name="inherit_id" ref="account.invoice_form" />
            <field name="model">account.invoice</field>
            <field name="arch" type="xml">
                <xpath expr="(//field[@name='payment_term_id'])" position="after">
                    <field name="first_name"/>
                    <field name="first_last_name"/>
                    <field name="nitf"/>
                    <field name="with_holding_selec" string="Retencion"/>
                    <field name="concept" attrs="{'invisible':[('with_holding_selec', '!=', True)]}" on_change="on_change_with_holding(concept)"/>
                    <field name="base_uvt" attrs="{'invisible':[('concept', '!=', True)]}"/>
                    <field name="base_pesos" attrs="{'invisible':[('concept', '!=', True)]}"/>
                    <field name="rates" attrs="{'invisible':[('concept', '!=', True)]}"/>
                    <field name="type_rates" attrs="{'invisible':[('concept', '!=', True)]}"/>
                </xpath>
                <xpath expr="(//field[@name='partner_id'])" position="replace"> 
                    <field name="partner_id" string="Cliente" on_change="on_change_partner_id(partner_id)" />
                </xpath>
            </field>
        </record>
  
    </data>
</openerp>        